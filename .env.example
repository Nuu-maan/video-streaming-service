# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENVIRONMENT=development
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_SHUTDOWN_TIMEOUT=30s

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=video_streaming
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=2

# Storage Configuration
STORAGE_UPLOAD_PATH=./web/uploads
STORAGE_THUMBNAIL_PATH=./web/uploads/thumbnails
STORAGE_TRANSCODED_PATH=./web/uploads/transcoded
STORAGE_MAX_FILE_SIZE=2147483648

# Worker Configuration
WORKER_MAX_CONCURRENT_JOBS=3
WORKER_JOB_TIMEOUT=30m

# FFmpeg Configuration (optional - auto-detected from PATH)
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe
FFMPEG_THREADS=2

# Quality Settings
ENABLE_360P=true
ENABLE_480P=true
ENABLE_720P=true
ENABLE_1080P=true
DELETE_ORIGINAL_AFTER_PROCESSING=false

# Logging
LOG_LEVEL=info
